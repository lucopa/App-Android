<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#80CBC4"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />


        <ImageButton
            android:id="@+id/botonBorrar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:contentDescription="Descripci贸n del bot贸n"
            android:scaleType="fitCenter"
            android:src="@drawable/borrar" />



        <ImageButton
            android:id="@+id/botonEditar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/botonBorrar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="39dp"
            android:contentDescription="Descripci贸n del bot贸n"
            android:scaleType="fitCenter"
            android:src="@drawable/lapiz" />

        <TextView
            android:id="@+id/tituloPelicula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:layout_alignParentTop="true"
            android:text="Card View"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tituloGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/tituloPelicula"
            android:text="Card View"
            android:textStyle="bold" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>
